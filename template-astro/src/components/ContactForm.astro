<form class="max-w-lg mx-auto space-y-4" netlify>
  <div>
    <label class="block mb-1" for="name">Nome</label>
    <input id="name" type="text" required class="w-full px-3 py-2 rounded bg-[#111827] text-[#e5e7eb]" />
  </div>
  <div>
    <label class="block mb-1" for="email">Email</label>
    <input id="email" type="email" required class="w-full px-3 py-2 rounded bg-[#111827] text-[#e5e7eb]" />
  </div>
  <div>
    <label class="block mb-1" for="message">Mensagem</label>
    <textarea id="message" rows="4" required class="w-full px-3 py-2 rounded bg-[#111827] text-[#e5e7eb]"></textarea>
  </div>
  <button type="submit" class="bg-cyan-500 hover:bg-cyan-400 text-[#0a0a0a] font-semibold px-6 py-2 rounded">Enviar</button>
</form>
